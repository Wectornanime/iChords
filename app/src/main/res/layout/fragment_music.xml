<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MusicFragment"
    >

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/imgBtn_test"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_test" />

    <ImageView
        android:id="@+id/imgBtn_lock1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/imgBtn_test"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_lock" />

    <ImageView
        android:id="@+id/imgBtn_lock2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@id/imgBtn_lock1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_lock" />

    <ImageView
        android:id="@+id/imgBtn_lock3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/imgBtn_lock2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/btn_lock" />

    <ImageView
        android:id="@+id/imgBtn_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/imgBtn_lock3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/btn_test" />

</androidx.constraintlayout.widget.ConstraintLayout>